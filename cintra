                {name: "!скоро встретимся", description: "", cost: 300}
            ]
        };

        // Songs data
        const songs = [
            {artist: "Алсу", name: "Весна"},
            {artist: "Алсу", name: "Зимний сон"},
            {artist: "Антон Токарев", name: "Седьмой лепесток"},
            {artist: "А-Студио", name: "Мама-папа"},
            {artist: "Валентин Стрыкало", name: "Наше Лето"},
            {artist: "ВИА-Гра", name: "Попытка №5"},
            {artist: "Градусы", name: "Голая"},
            {artist: "Жуки", name: "Батарейка"},
            {artist: "КняZz", name: "Адель"},
            {artist: "КиШ", name: "Кукла колдуна"},
            {artist: "КиШ", name: "Лесник"},
            {artist: "КиШ", name: "Мастер приглашает в гости"},
            {artist: "Лицей", name: "Осень"},
            {artist: "Лобода", name: "Твои глаза"},
            {artist: "Лобода", name: "Пуля-дура"},
            {artist: "Меладзе", name: "Салют, Вера!"},
            {artist: "Меладзе", name: "Текила-любовь"},
            {artist: "Мраж", name: "Музыка нас связала"},
            {artist: "Мумий-Тролль", name: "Медведица"},
            {artist: "Николай Носков", name: "А на меньшее я не согласен"},
            {artist: "Николай Носков", name: "Снег"},
            {artist: "Николай Носков", name: "Это здорово"},
            {artist: "Чиж и Ко", name: "О любви"},
            {artist: "Чичерина", name: "Ту-лу-ла"},
            {artist: "Чичерина", name: "Жара"},
            {artist: "The Cranberries", name: "Zombie"},
            {artist: "No Doubt", name: "Don't Speak"}
        ];

        // DOM Elements
        const splashScreen = document.getElementById('splash-screen');
        const themeToggle = document.getElementById('theme-toggle');
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');
        const tabIndicator = document.getElementById('tab-indicator');
        const tabsNav = document.getElementById('tabs-nav');
        const categoriesTabs = document.getElementById('categories-tabs');
        const commandsContainer = document.getElementById('commands-container');
        const songsContainer = document.getElementById('songs-container');
        const notification = document.getElementById('notification');
        const notificationText = document.getElementById('notification-text');
        const searchBox = document.getElementById('search-box');
        const noResults = document.getElementById('no-results');
        const noSongsResults = document.getElementById('no-songs-results');
        const balanceBtn = document.getElementById('balance-value');
        
        let activeCategoryFilter = "Все";
        let searchQuery = "";
        let allCommands = [];
        let currentTab = 'commands';

        // Initialize theme from localStorage or system preference
        function initTheme() {
            const savedTheme = localStorage.getItem('theme');
            const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            
            if (savedTheme) {
                document.body.setAttribute('data-theme', savedTheme);
            } else if (systemPrefersDark) {
                document.body.setAttribute('data-theme', 'dark');
            } else {
                document.body.setAttribute('data-theme', 'light');
            }
        }

        // Toggle theme
        function toggleTheme() {
            const currentTheme = document.body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            document.body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            // Add animation to toggle button
            themeToggle.style.transform = 'scale(0.95)';
            setTimeout(() => {
                themeToggle.style.transform = '';
            }, 150);
        }

        // Hide splash screen
        function hideSplashScreen() {
            setTimeout(() => {
                splashScreen.classList.add('hidden');
            }, 2000); // Показываем 2 секунды
        }

        // Prepare all commands array
        function prepareAllCommands() {
            allCommands = [];
            Object.entries(commandsByCategory).forEach(([category, commands]) => {
                commands.forEach(command => {
                    allCommands.push({
                        ...command,
                        category: category
                    });
                });
            });
            
            allCommands.sort((a, b) => a.name.localeCompare(b.name));
        }

        // Prepare songs
        function prepareSongs() {
            songs.sort((a, b) => a.artist.localeCompare(b.artist));
        }

        // Initialize everything
        function initialize() {
            initTheme();
            prepareAllCommands();
            prepareSongs();
            initCategories();
            renderCommands();
            renderSongs();
            
            // Небольшая задержка для гарантии рендеринга DOM
            setTimeout(updateTabIndicator, 100);
            
            // Прячем экран приветствия
            hideSplashScreen();
        }

        // Update tab indicator position - ИСПРАВЛЕННАЯ ФУНКЦИЯ
        function updateTabIndicator() {
            const activeTab = document.querySelector('.tab-btn.active');
            if (!activeTab || !tabIndicator || !tabsNav) return;
            
            try {
                // Получаем позицию относительно контейнера вкладок
                const navRect = tabsNav.getBoundingClientRect();
                const tabRect = activeTab.getBoundingClientRect();
                
                // Рассчитываем позицию с учетом padding контейнера
                const position = tabRect.left - navRect.left;
                const width = tabRect.width;
                
                // Устанавливаем индикатор
                tabIndicator.style.transform = `translateX(${position}px)`;
                tabIndicator.style.width = `${width}px`;
                
                // Убедимся, что индикатор не выходит за границы
                // Вычитаем 16px для учета padding контейнера (8px слева + 8px справа)
                const maxPosition = navRect.width - width - 16;
                
                // Если индикатор выходит за границы, корректируем его положение
                if (position < 8) {
                    tabIndicator.style.transform = 'translateX(8px)';
                } else if (position > maxPosition) {
                    tabIndicator.style.transform = `translateX(${maxPosition}px)`;
                }
                
                // Set indicator color based on active tab
                if (activeTab.classList.contains('songs-tab')) {
                    tabIndicator.style.background = 'var(--purple)';
                } else {
                    tabIndicator.style.background = 'var(--primary)';
                }
            } catch (error) {
                console.error('Error updating tab indicator:', error);
            }
        }

        // Handle tab switching
        function handleTabSwitch(e) {
            const tabId = e.currentTarget.getAttribute('data-tab');
            
            if (currentTab === tabId) return;
            
            // Update tabs
            tabBtns.forEach(btn => btn.classList.remove('active'));
            e.currentTarget.classList.add('active');
            
            // Update contents
            tabContents.forEach(content => content.classList.remove('active'));
            document.getElementById(`${tabId}-tab`).classList.add('active');
            
            currentTab = tabId;
            
            // Update tab indicator с небольшими задержками для гарантии рендеринга
            setTimeout(() => {
                updateTabIndicator();
                // Двойная проверка через небольшой интервал
                setTimeout(updateTabIndicator, 50);
            }, 20);
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Initialize Categories
        function initCategories() {
            categoriesTabs.innerHTML = '';
            
            // Add "Все" category first
            const allTab = createCategoryTag("Все", "active");
            categoriesTabs.appendChild(allTab);
            
            // Add other categories
            Object.entries(commandsByCategory).forEach(([category]) => {
                const tab = createCategoryTag(category, "");
                categoriesTabs.appendChild(tab);
            });
        }

        // Create category tag
        function createCategoryTag(name, extraClass = "") {
            const tag = document.createElement('div');
            tag.className = `category-tag ${extraClass}`;
            tag.textContent = name;
            tag.setAttribute('data-category', name);
            
            tag.addEventListener('click', handleCategoryClick);
            
            return tag;
        }

        // Handle category click
        function handleCategoryClick(e) {
            const category = e.currentTarget.getAttribute('data-category');
            
            if (category === activeCategoryFilter) return;
            
            // Update tags
            document.querySelectorAll('.category-tag').forEach(t => {
                t.classList.remove('active');
            });
            e.currentTarget.classList.add('active');
            
            // Clear search if changing category
            if (searchQuery) {
                searchBox.value = "";
                searchQuery = "";
            }
            
            // Update category
            activeCategoryFilter = category;
            renderCommands();
        }

        // Render Commands based on current category/search
        function renderCommands() {
            commandsContainer.innerHTML = '';
            
            let commandsToDisplay = [];
            
            if (searchQuery) {
                // Search mode
                commandsToDisplay = allCommands.filter(command => 
                    command.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
                    (command.description && command.description.toLowerCase().includes(searchQuery.toLowerCase()))
                );
                
                // Show/hide no results
                if (commandsToDisplay.length === 0) {
                    noResults.style.display = 'block';
                } else {
                    noResults.style.display = 'none';
                }
            } else if (activeCategoryFilter === "Все") {
                // All commands mode
                commandsToDisplay = allCommands;
                noResults.style.display = 'none';
            } else {
                // Specific category mode
                commandsToDisplay = commandsByCategory[activeCategoryFilter];
                commandsToDisplay = [...commandsToDisplay].sort((a, b) => a.name.localeCompare(b.name));
                noResults.style.display = 'none';
            }
            
            // Display commands
            commandsToDisplay.forEach((command, index) => {
                const commandCard = document.createElement('div');
                commandCard.className = 'command-card';
                commandCard.setAttribute('data-command', command.name);
                commandCard.setAttribute('role', 'button');
                commandCard.setAttribute('aria-label', `Команда: ${command.name}. ${command.description || 'Нет описания'}`);
                commandCard.setAttribute('tabindex', '0');
                
                const categoryLabel = activeCategoryFilter === "Все" || searchQuery ? 
                    `<div class="command-category">${command.category}</div>` : '';
                
                commandCard.innerHTML = `
                    <div class="command-header">
                        <div class="command-name">${command.name}</div>
                        <div class="command-cost" aria-label="Стоимость: ${command.cost} БУСЕК">
                            <i class="fas fa-coins" aria-hidden="true"></i>
                            <span>${command.cost}</span>
                        </div>
                    </div>
                    <div class="command-description">
                        ${command.description || ' '}
                        ${categoryLabel}
                    </div>
                `;
                
                // Add click/touch event
                commandCard.addEventListener('click', handleCommandClick);
                commandCard.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        handleCommandClick(e);
                    }
                });
                
                commandsContainer.appendChild(commandCard);
            });
        }

        // Render Songs
        function renderSongs() {
            songsContainer.innerHTML = '';
            
            songs.forEach((song, index) => {
                const command = `!песня ${song.artist} - ${song.name}`;
                const songCard = document.createElement('div');
                songCard.className = 'song-card';
                songCard.setAttribute('data-command', command);
                songCard.setAttribute('role', 'button');
                songCard.setAttribute('aria-label', `Заказать песню: ${song.artist} - ${song.name}`);
                songCard.setAttribute('tabindex', '0');
                
                songCard.innerHTML = `
                    <div class="song-icon">
                        <i class="fas fa-music"></i>
                    </div>
                    <div class="song-info">
                        <div class="song-artist">${song.artist}</div>
                        <div class="song-title">${song.name}</div>
                    </div>
                    <div class="song-price" aria-label="Стоимость: 40,000 БУСЕК">
                        <i class="fas fa-gem"></i>
                        <span>40,000</span>
                    </div>
                `;
                
                // Add click/touch event
                songCard.addEventListener('click', handleSongClick);
                songCard.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        handleSongClick(e);
                    }
                });
                
                songsContainer.appendChild(songCard);
            });
        }

        // Handle command click
        function handleCommandClick(e) {
            const commandCard = e.currentTarget;
            const command = commandCard.getAttribute('data-command');
            
            copyToClipboard(command);
            showNotification(`"${command}" скопировано!`, 'commands');
            
            // Add visual feedback
            commandCard.style.transform = 'scale(0.98)';
            
            setTimeout(() => {
                commandCard.style.transform = '';
            }, 200);
        }

        // Handle song click
        function handleSongClick(e) {
            const songCard = e.currentTarget;
            const command = songCard.getAttribute('data-command');
            
            copyToClipboard(command);
            showNotification(`"${command}" скопировано!`, 'songs');
            
            // Add visual feedback
            songCard.style.transform = 'scale(0.98)';
            
            setTimeout(() => {
                songCard.style.transform = '';
            }, 200);
        }

        // Handle search
        function handleSearch() {
            searchQuery = searchBox.value.trim();
            
            // If search is empty, show current category
            if (!searchQuery) {
                if (activeCategoryFilter !== "Все") {
                    renderCommands();
                } else {
                    renderCommands();
                }
                return;
            }
            
            // Show all commands when searching
            if (activeCategoryFilter !== "Все") {
                document.querySelectorAll('.category-tag').forEach(t => {
                    t.classList.remove('active');
                    if (t.getAttribute('data-category') === "Все") {
                        t.classList.add('active');
                    }
                });
                activeCategoryFilter = "Все";
            }
            
            renderCommands();
        }

        // Copy to Clipboard
        function copyToClipboard(text) {
            if (navigator.clipboard && window.isSecureContext) {
                navigator.clipboard.writeText(text);
            } else {
                const textArea = document.createElement("textarea");
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand("copy");
                document.body.removeChild(textArea);
            }
        }

        // Show notification
        function showNotification(message, type = 'commands') {
            notificationText.textContent = message;
            notification.classList.remove('songs-notification');
            
            if (type === 'songs') {
                notification.classList.add('songs-notification');
            }
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Handle balance button click
        function handleBalanceClick() {
            copyToClipboard('!буськи');
            showNotification('Команда "!буськи" скопирована для проверки баланса', currentTab);
            
            // Add visual feedback
            balanceBtn.style.transform = 'scale(0.95)';
            setTimeout(() => {
                balanceBtn.style.transform = '';
            }, 150);
        }

        // Initialize on DOM load
        document.addEventListener('DOMContentLoaded', () => {
            initialize();
            
            // Event listeners
            themeToggle.addEventListener('click', toggleTheme);
            tabBtns.forEach(btn => btn.addEventListener('click', handleTabSwitch));
            balanceBtn.addEventListener('click', handleBalanceClick);
            
            // Debounce search for performance
            let searchTimeout;
            searchBox.addEventListener('input', () => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(handleSearch, 300);
            });
            
            // Handle window resize
            window.addEventListener('resize', updateTabIndicator);
            
            // Force update tab indicator after a short delay to ensure everything is rendered
            setTimeout(updateTabIndicator, 300);
        });

        // Handle page load event
        window.addEventListener('load', () => {
            setTimeout(updateTabIndicator, 300);
        });
    </script>
</body>
</html>
